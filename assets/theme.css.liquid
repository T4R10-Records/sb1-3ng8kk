{% comment %}
  Main theme stylesheet
{% endcomment %}

/* Base styles */
:root {
  --color-primary: {{ settings.primary_color }};
  --color-secondary: {{ settings.secondary_color }};
  --color-accent: {{ settings.accent_color }};
  --color-background: {{ settings.background_color }};
  --color-text: {{ settings.text_color }};
  --color-border: {{ settings.border_color }};
}

/* Theme Editor */
{% render 'theme-editor-styles' %}

/* Components */
{% render 'quick-view-styles' %}
{% render 'hero-styles' %}
{% render 'stats-styles' %}
{% render 'base-styles' %}

/* Responsive */
@media (max-width: 768px) {
  .cart-drawer {
    width: 100%;
  }
  
  .stats__grid {
    grid-template-columns: 1fr;
  }
  
  .hero {
    min-height: 500px;
  }
}